{{#if user}}
<p>Hello, {{user.username}}</p>

{{/if}}


{{#each theBooks}}

<div>
    <a href="/books/{{this._id}}">

        <h3>
            Title:
            {{this.title}}
        </h3>
    </a>

    <h5>By: {{this.author.name}}</h5>


    {{#if this.isMine}}
    <a href="/books/edit/{{this._id}}">Edit This Book</a>
    {{/if}}

    <form action="/books/delete/{{this._id}}" method="POST">
    <button>Delete</button>
    </form>



</div>




<hr>

{{/each}}